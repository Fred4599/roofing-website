---
import { siteConfig } from '../config/site';

interface Props {
  title?: string;
  subtitle?: string;
  primaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  variant?: 'default' | 'dark' | 'accent';
}

const {
  title = 'Ready to Get Started?',
  subtitle = 'Contact us today for a free estimate on your roofing or siding project. We serve homeowners throughout the Treasure Valley.',
  primaryButtonText = 'Get Free Estimate',
  primaryButtonHref = '/contact',
  secondaryButtonText = `Call ${siteConfig.phone}`,
  secondaryButtonHref = `tel:${siteConfig.phone.replace(/[^0-9]/g, '')}`,
  variant = 'dark',
} = Astro.props;
---

<section class="py-24 relative overflow-hidden bg-slate-900">
    <div class="absolute inset-0 bg-grid-pattern-dark opacity-10 pointer-events-none"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="md:flex md:justify-between md:items-end mb-16">
            <div class="max-w-xl">
                <h2 class="font-medium tracking-wider uppercase text-sm mb-3 text-yellow-400">Trusted Quality</h2>
                <h3 class="text-3xl font-semibold tracking-tight sm:text-4xl text-white">{title}</h3>
                <p class="mt-4 text-lg text-slate-400">{subtitle}</p>
            </div>
            <div class="mt-8 md:mt-0 flex flex-col sm:flex-row gap-4">
                <a href={primaryButtonHref} class="inline-flex items-center justify-center transition-all hover:shadow-xl hover:-translate-y-0.5 text-sm font-medium rounded-lg px-8 py-4 shadow-lg hover:bg-yellow-500 text-slate-900 bg-yellow-400">
                    {primaryButtonText}
                </a>
                <a href={secondaryButtonHref} class="inline-flex items-center justify-center px-8 py-4 text-sm font-medium rounded-lg backdrop-blur-sm border border-slate-700 transition-all shadow-sm text-white bg-slate-800/30 hover:bg-slate-800">
                    {secondaryButtonText}
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Feature 1 -->
            <div class="p-6 border rounded-lg backdrop-blur-sm border-slate-700/50 bg-slate-800/30">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" viewBox="0 0 24 24" class="iconify w-8 h-8 mb-4 text-yellow-400"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path><path d="m9 12l2 2l4-4"></path></g></svg>
                <h4 class="font-medium mb-2 text-white">Safety First</h4>
                <p class="text-sm text-slate-400">Fully licensed and insured roofing and siding professionals.</p>
            </div>
            <!-- Feature 2 -->
            <div class="p-6 border rounded-lg backdrop-blur-sm border-slate-700/50 bg-slate-800/30">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" viewBox="0 0 24 24" class="iconify w-8 h-8 mb-4 text-yellow-400"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M12 6v6l4 2"></path><circle cx="12" cy="12" r="10"></circle></g></svg>
                <h4 class="font-medium mb-2 text-white">On-Time Delivery</h4>
                <p class="text-sm text-slate-400">Efficient project management to respect your time and property.</p>
            </div>
            <!-- Feature 3 -->
            <div class="p-6 border rounded-lg backdrop-blur-sm border-slate-700/50 bg-slate-800/30">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" viewBox="0 0 24 24" class="iconify w-8 h-8 mb-4 text-yellow-400"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="m15.477 12.89l1.515 8.526a.5.5 0 0 1-.81.47l-3.58-2.687a1 1 0 0 0-1.197 0l-3.586 2.686a.5.5 0 0 1-.81-.469l1.514-8.526"></path><circle cx="12" cy="8" r="6"></circle></g></svg>
                <h4 class="font-medium mb-2 text-white">Award Winning</h4>
                <p class="text-sm text-slate-400">Consistently rated as top roofing contractors in Idaho.</p>
            </div>
            <!-- Feature 4 -->
            <div class="p-6 border rounded-lg backdrop-blur-sm border-slate-700/50 bg-slate-800/30">
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1em" height="1em" viewBox="0 0 24 24" class="iconify w-8 h-8 mb-4 text-yellow-400"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M18 8V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v7a2 2 0 0 0 2 2h8m-2 4v-3.96v3.15M7 19h5"></path><rect width="6" height="10" x="16" y="12" rx="2"></rect></g></svg>
                <h4 class="font-medium mb-2 text-white">Modern Materials</h4>
                <p class="text-sm text-slate-400">We use the latest high-performance roofing and siding systems.</p>
            </div>
        </div>
    </div>
</section>
