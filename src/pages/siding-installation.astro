---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import TrustBadges from '../components/TrustBadges.astro';
import HowItWorks from '../components/HowItWorks.astro';
import CityGrid from '../components/CityGrid.astro';
import CTASection from '../components/CTASection.astro';
import { siteConfig } from '../config/site';

const processSteps = [
  { number: 1, title: 'Free Consultation', description: 'We assess your home, discuss options, and provide a detailed estimate.' },
  { number: 2, title: 'Material Selection', description: 'Choose your siding type, color, and style from our extensive options.' },
  { number: 3, title: 'Site Preparation', description: 'We protect landscaping and prepare your home for installation.' },
  { number: 4, title: 'Old Siding Removal', description: 'Existing siding is carefully removed and properly disposed.' },
  { number: 5, title: 'Installation', description: 'New housewrap and siding installed to manufacturer specifications.' },
  { number: 6, title: 'Final Details', description: 'Trim, caulking, touch-ups, cleanup, and final walkthrough.' },
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  serviceType: 'Siding Installation',
  provider: { '@type': 'HomeAndConstructionBusiness', name: siteConfig.siteName },
  areaServed: siteConfig.serviceAreas.map((area) => ({ '@type': 'City', name: area.name })),
};
---

<BaseLayout
  title="Siding Installation in Boise"
  description="Professional siding installation in Boise, Meridian, Eagle, and Garden City. Vinyl, fiber cement, and wood siding. Expert installers. Free estimates."
  canonicalPath="/siding-installation"
  schema={serviceSchema}
>
  <HeroSection
    title="Professional Siding Installation"
    subtitle="Complete your home's transformation with expert siding installation. Quality materials, meticulous craftsmanship, and attention to detail."
  />

  <TrustBadges variant="compact" />

  <section class="section">
    <div class="container">
      <div class="intro-grid">
        <div class="intro-content">
          <h2>Expert Siding Installation for Treasure Valley Homes</h2>
          <p>
            Your home's siding is its first line of defense against the elements—and its first impression. We specialize
            in installing premium siding materials that protect your home while enhancing its beauty.
          </p>
          <p>
            Whether you're replacing worn-out siding or giving your home a fresh new look, our experienced installers
            deliver results that last. We're certified James Hardie installers and work with all major vinyl and wood
            siding manufacturers.
          </p>

          <h3>Our Siding Installation Includes</h3>
          <ul class="includes-list">
            <li>Complete removal of existing siding</li>
            <li>Inspection for moisture damage or rot</li>
            <li>Housewrap installation for weather protection</li>
            <li>Professional siding installation</li>
            <li>All trim, corners, and J-channels</li>
            <li>Proper sealing around windows and doors</li>
            <li>Complete cleanup and disposal</li>
          </ul>
          <a href="/contact" class="btn btn-primary">Get Free Estimate</a>
        </div>
        <div class="intro-image">
          <div class="image-placeholder">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="3" width="18" height="18" rx="2" />
              <path d="M3 8h18M3 13h18M3 18h18" />
            </svg>
            <span>Siding Installation Photo</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <HowItWorks
    steps={processSteps}
    title="Our Installation Process"
    subtitle="From consultation to completion, we ensure a smooth, professional experience."
  />

  <section class="section">
    <div class="container">
      <h2 class="text-center">Siding Options</h2>
      <div class="options-grid">
        <a href="/vinyl-siding" class="option-card">
          <h3>Vinyl Siding</h3>
          <p>Affordable, durable, and available in many colors. The most popular choice for budget-conscious homeowners.</p>
          <span class="option-link">Learn More →</span>
        </a>
        <a href="/fiber-cement-siding" class="option-card featured">
          <h3>Fiber Cement Siding</h3>
          <p>Premium durability with authentic wood looks. James Hardie certified installation.</p>
          <span class="option-link">Learn More →</span>
        </a>
        <a href="/wood-siding" class="option-card">
          <h3>Wood Siding</h3>
          <p>Natural beauty and traditional appeal. Cedar and engineered wood options.</p>
          <span class="option-link">Learn More →</span>
        </a>
      </div>
    </div>
  </section>

  <CityGrid />

  <CTASection
    title="Ready for New Siding?"
    subtitle="Contact us for a free consultation. We'll help you choose the perfect siding and provide a detailed estimate."
  />
</BaseLayout>

<style>
  .intro-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    align-items: start;
  }

  .intro-content h2 {
    margin-bottom: var(--spacing-md);
  }

  .intro-content > p {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
  }

  .intro-content h3 {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .includes-list {
    margin-bottom: var(--spacing-lg);
    padding-left: 1.5rem;
  }

  .includes-list li {
    margin-bottom: var(--spacing-xs);
  }

  .image-placeholder {
    aspect-ratio: 4 / 3;
    background-color: var(--color-bg-alt);
    border-radius: var(--border-radius);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--color-text-light);
    gap: var(--spacing-xs);
  }

  .image-placeholder svg {
    width: 64px;
    height: 64px;
    opacity: 0.5;
  }

  .options-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-xl);
  }

  .option-card {
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    text-decoration: none;
    transition: all var(--transition);
  }

  .option-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .option-card.featured {
    border-color: var(--color-primary);
  }

  .option-card h3 {
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .option-card p {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-sm);
    font-size: 0.9375rem;
  }

  .option-link {
    color: var(--color-primary);
    font-weight: 600;
  }

  @media (min-width: 992px) {
    .intro-grid {
      grid-template-columns: 1.2fr 0.8fr;
    }
  }
</style>
