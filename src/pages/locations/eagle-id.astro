---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroSection from '../../components/HeroSection.astro';
import ServiceCards from '../../components/ServiceCards.astro';
import TrustBadges from '../../components/TrustBadges.astro';
import ReviewHighlights from '../../components/ReviewHighlights.astro';
import CTASection from '../../components/CTASection.astro';
import { siteConfig } from '../../config/site';

const city = 'Eagle';
const state = 'Idaho';
const fullLocation = `${city}, ${state}`;

const roofingServices = [
  { title: 'Roof Replacement', description: `Premium roof replacement for ${city} homes. Quality materials and expert craftsmanship.`, href: '/roof-replacement' },
  { title: 'Metal Roofing', description: `Durable metal roofing perfect for ${city}'s upscale homes and foothills properties.`, href: '/metal-roofing' },
  { title: 'Storm Damage Repair', description: `Emergency storm damage repair in ${city}. Insurance claim assistance included.`, href: '/storm-damage-roof-repair' },
];

const sidingServices = [
  { title: 'Fiber Cement Siding', description: `Premium James Hardie siding—the top choice for ${city}'s luxury homes.`, href: '/fiber-cement-siding' },
  { title: 'Siding Installation', description: `Transform your ${city} home with quality siding installation.`, href: '/siding-installation' },
  { title: 'Wood Siding', description: `Natural wood siding for ${city} homes seeking classic mountain aesthetics.`, href: '/wood-siding' },
];

const localSchema = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': `${siteConfig.siteUrl}/locations/eagle-id`,
  name: `${siteConfig.siteName} - ${city}`,
  description: `Premium roofing and siding services in ${fullLocation}. Roof replacement, metal roofing, and luxury siding installation.`,
  url: `${siteConfig.siteUrl}/locations/eagle-id`,
  telephone: siteConfig.phone,
  areaServed: { '@type': 'City', name: city },
};
---

<BaseLayout
  title={`Roofing & Siding Services in ${city}`}
  description={`Premium roofing and siding contractor in ${fullLocation}. Roof replacement, metal roofing, James Hardie siding. Free estimates. Licensed & insured.`}
  canonicalPath="/locations/eagle-id"
  schema={localSchema}
>
  <HeroSection
    title={`Premium Roofing & Siding in ${city}, Idaho`}
    subtitle={`${siteConfig.siteName} provides exceptional roofing and siding services for ${city}'s distinctive homes. Quality craftsmanship for discerning homeowners.`}
  />

  <TrustBadges variant="compact" />

  <section class="section">
    <div class="container">
      <div class="intro">
        <h2>Excellence for {city}'s Finest Homes</h2>
        <p>
          {city} is known for its beautiful homes, from custom estates in the foothills to elegant properties along the
          Boise River. These homes deserve roofing and siding that matches their quality—and that's exactly what we
          deliver.
        </p>
        <p>
          We understand that {city} homeowners expect the best. That's why we offer premium options like metal roofing,
          James Hardie fiber cement siding, and architectural shingle upgrades. Our attention to detail and commitment
          to craftsmanship have made us a trusted name in {city}.
        </p>
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <h2 class="text-center">Roofing Services in {city}</h2>
      <ServiceCards services={roofingServices} columns={3} />
      <div class="services-cta">
        <a href="/roofing" class="btn btn-outline">View All Roofing Services</a>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="text-center">Siding Services in {city}</h2>
      <ServiceCards services={sidingServices} columns={3} />
      <div class="services-cta">
        <a href="/siding" class="btn btn-outline">View All Siding Services</a>
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <div class="local-info">
        <h2>Why {city} Homeowners Choose Us</h2>
        <ul class="benefits-list">
          <li><strong>Premium Options:</strong> Metal roofing, slate alternatives, and high-end siding for {city}'s luxury homes.</li>
          <li><strong>Custom Solutions:</strong> We work with unique roof designs and architectural details.</li>
          <li><strong>Foothills Experience:</strong> Familiar with the challenges of {city}'s hillside properties.</li>
          <li><strong>Respectful Service:</strong> Clean, professional crews who respect your property.</li>
          <li><strong>HOA Compliance:</strong> We know {city}'s community standards and requirements.</li>
        </ul>
        <a href="/roof-replacement" class="btn btn-primary">Get {city} Roof Estimate</a>
      </div>
    </div>
  </section>

  <ReviewHighlights title={`What ${city} Homeowners Say`} />

  <section class="section">
    <div class="container">
      <h2 class="text-center">Serving All {city} Areas</h2>
      <div class="areas-grid">
        <div class="area-item">Downtown Eagle</div>
        <div class="area-item">Eagle Foothills</div>
        <div class="area-item">Eagle Island</div>
        <div class="area-item">Banbury</div>
        <div class="area-item">Avimor</div>
        <div class="area-item">Hidden Springs</div>
        <div class="area-item">Dry Creek</div>
        <div class="area-item">Eagle Hills</div>
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container text-center">
      <h2>Nearby Service Areas</h2>
      <p class="section-subtitle">
        We also serve homeowners in <a href="/locations/boise-id">Boise</a>,
        <a href="/locations/meridian-id">Meridian</a>, and <a href="/locations/garden-city-id">Garden City</a>.
      </p>
    </div>
  </section>

  <CTASection
    title={`Ready to Elevate Your ${city} Home?`}
    subtitle={`Contact us today for a free estimate on premium roofing and siding services.`}
  />
</BaseLayout>

<style>
  .intro {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .intro h2 {
    margin-bottom: var(--spacing-md);
  }

  .intro p {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
  }

  .services-cta {
    text-align: center;
    margin-top: var(--spacing-lg);
  }

  .local-info {
    max-width: 700px;
    margin: 0 auto;
  }

  .local-info h2 {
    margin-bottom: var(--spacing-md);
  }

  .benefits-list {
    list-style: none;
    margin-bottom: var(--spacing-lg);
  }

  .benefits-list li {
    position: relative;
    padding-left: 1.75rem;
    margin-bottom: var(--spacing-sm);
  }

  .benefits-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: 700;
  }

  .areas-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
  }

  .area-item {
    background-color: var(--color-bg-alt);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--border-radius);
    font-weight: 500;
  }

  .section-subtitle {
    color: var(--color-text-light);
  }
</style>
