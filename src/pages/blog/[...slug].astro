---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../../config/site';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

const articleSchema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: post.data.title,
  description: post.data.description,
  datePublished: post.data.pubDate.toISOString(),
  dateModified: (post.data.updatedDate || post.data.pubDate).toISOString(),
  author: {
    '@type': 'Organization',
    name: siteConfig.siteName,
  },
  publisher: {
    '@type': 'Organization',
    name: siteConfig.siteName,
  },
};
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  canonicalPath={`/blog/${post.slug}`}
  schema={articleSchema}
  ogType="article"
>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <div class="post-meta">
          <span class="post-category">{post.data.category}</span>
          <time datetime={post.data.pubDate.toISOString()}>{formatDate(post.data.pubDate)}</time>
        </div>
        <h1>{post.data.title}</h1>
        <p class="post-description">{post.data.description}</p>
        {post.data.author && <p class="post-author">By {post.data.author}</p>}
      </div>
    </header>

    <div class="container">
      <div class="post-content">
        <Content />
      </div>

      <aside class="post-sidebar">
        <div class="sidebar-cta">
          <h3>Need Roofing Help?</h3>
          <p>Contact us for a free estimate on your roofing or siding project.</p>
          <a href="/contact" class="btn btn-primary">Get Free Estimate</a>
        </div>

        <div class="sidebar-services">
          <h3>Our Services</h3>
          <ul>
            <li><a href="/roof-replacement">Roof Replacement</a></li>
            <li><a href="/roof-repair">Roof Repair</a></li>
            <li><a href="/storm-damage-roof-repair">Storm Damage</a></li>
            <li><a href="/siding-installation">Siding Installation</a></li>
          </ul>
        </div>
      </aside>
    </div>

    <footer class="post-footer">
      <div class="container">
        <a href="/blog" class="back-link">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M10 12l-4-4 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Back to Blog
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    color: var(--color-text-inverse);
    padding: var(--spacing-2xl) 0;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
    font-size: 0.9375rem;
    opacity: 0.9;
  }

  .post-category {
    background-color: rgba(255, 255, 255, 0.2);
    padding: 4px 12px;
    border-radius: 4px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
  }

  .post-header h1 {
    color: var(--color-text-inverse);
    margin-bottom: var(--spacing-sm);
    max-width: 800px;
  }

  .post-description {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 700px;
    margin-bottom: var(--spacing-sm);
  }

  .post-author {
    opacity: 0.8;
    margin: 0;
  }

  .blog-post > .container {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-xl);
    padding-top: var(--spacing-xl);
    padding-bottom: var(--spacing-xl);
  }

  .post-content {
    max-width: 100%;
  }

  .post-content :global(h2) {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    font-size: 1.5rem;
  }

  .post-content :global(h3) {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    font-size: 1.25rem;
  }

  .post-content :global(p) {
    margin-bottom: var(--spacing-md);
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-lg);
  }

  .post-content :global(li) {
    margin-bottom: var(--spacing-xs);
    line-height: 1.7;
  }

  .post-content :global(strong) {
    font-weight: 600;
  }

  .post-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .post-content :global(hr) {
    margin: var(--spacing-xl) 0;
    border: none;
    border-top: 1px solid var(--color-border);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-md);
    margin: var(--spacing-lg) 0;
    font-style: italic;
    color: var(--color-text-light);
  }

  .post-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .sidebar-cta {
    background-color: var(--color-bg-alt);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
    text-align: center;
  }

  .sidebar-cta h3 {
    margin-bottom: var(--spacing-xs);
  }

  .sidebar-cta p {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
    font-size: 0.9375rem;
  }

  .sidebar-services {
    background-color: var(--color-bg-alt);
    padding: var(--spacing-lg);
    border-radius: var(--border-radius);
  }

  .sidebar-services h3 {
    margin-bottom: var(--spacing-sm);
  }

  .sidebar-services ul {
    list-style: none;
  }

  .sidebar-services li {
    margin-bottom: var(--spacing-xs);
  }

  .sidebar-services a {
    color: var(--color-text);
    font-size: 0.9375rem;
  }

  .sidebar-services a:hover {
    color: var(--color-primary);
  }

  .post-footer {
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-lg) 0;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--color-primary);
    font-weight: 500;
  }

  @media (min-width: 992px) {
    .blog-post > .container {
      grid-template-columns: 1fr 300px;
    }

    .post-sidebar {
      position: sticky;
      top: calc(var(--header-height) + var(--spacing-md));
      align-self: start;
    }
  }
</style>
