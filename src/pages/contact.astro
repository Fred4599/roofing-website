---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ContactForm from '../components/ContactForm.astro';
import { siteConfig } from '../config/site';

const contactSchema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contact Treasure Valley Roofing & Siding',
  description: 'Contact us for a free roofing or siding estimate. Serving Boise, Meridian, Eagle, and Garden City.',
  url: `${siteConfig.siteUrl}/contact`,
  mainEntity: {
    '@type': 'LocalBusiness',
    name: siteConfig.siteName,
    telephone: siteConfig.phone,
    email: siteConfig.email,
    address: {
      '@type': 'PostalAddress',
      streetAddress: siteConfig.address.street,
      addressLocality: siteConfig.address.city,
      addressRegion: siteConfig.address.state,
      postalCode: siteConfig.address.zip,
      addressCountry: 'US',
    },
  },
};
---

<BaseLayout
  title="Contact Us"
  description="Contact Treasure Valley Roofing & Siding for a free estimate. Call (208) 555-0199 or fill out our online form. Serving Boise, Meridian, Eagle, and Garden City."
  canonicalPath="/contact"
  schema={contactSchema}
>
  <HeroSection
    title="Contact Us"
    subtitle="Ready to start your roofing or siding project? Get in touch for a free, no-obligation estimate. We typically respond within 24 hours."
    ctaText={`Call ${siteConfig.phone}`}
    ctaHref={`tel:${siteConfig.phone.replace(/[^0-9]/g, '')}`}
    secondaryCtaText="Send Email"
    secondaryCtaHref={`mailto:${siteConfig.email}`}
  />

  <ContactForm />

  <!-- Service Area -->
  <section class="py-16 md:py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-semibold tracking-tight text-slate-900 text-center mb-4">Service Area</h2>
      <p class="text-center text-slate-500 max-w-lg mx-auto mb-12">
        We proudly serve homeowners throughout the Treasure Valley, including:
      </p>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
        {siteConfig.serviceAreas.map((area) => (
          <a href={`/locations/${area.slug}`} class="flex items-center gap-3 p-4 bg-white border border-slate-200 rounded-xl hover:border-yellow-400 transition-all text-slate-700 font-medium">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-5 h-5 text-yellow-500 flex-shrink-0">
              <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-sm">{area.name}, {area.state}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Map Placeholder -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-slate-50 border border-slate-200 rounded-2xl p-12 md:p-16 text-center text-slate-400">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-16 h-16 mx-auto mb-4 opacity-50">
          <path d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
        <p class="text-slate-500">Google Map Embed Placeholder</p>
        <p class="text-slate-700 font-medium mt-2">{siteConfig.address.full}</p>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="py-16 md:py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center text-center md:text-left gap-6 p-6 md:p-8 bg-gradient-to-r from-yellow-50 to-yellow-100 border-2 border-yellow-300 rounded-2xl">
        <div class="w-14 h-14 flex-shrink-0 text-yellow-500">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-full h-full">
            <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-lg font-semibold text-slate-900 mb-1">Emergency Storm Damage?</h3>
          <p class="text-slate-600 text-sm">
            If you're dealing with emergency roof damage from a storm, don't wait. Call us immediately and we'll prioritize your inspection.
          </p>
        </div>
        <a href={`tel:${siteConfig.phone.replace(/[^0-9]/g, '')}`} class="flex-shrink-0 inline-flex items-center justify-center px-6 py-3 text-sm font-semibold rounded-lg bg-yellow-400 hover:bg-yellow-500 text-slate-900 transition-all shadow-sm">
          Call Now: {siteConfig.phone}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
