---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import CTASection from '../components/CTASection.astro';
import { siteConfig } from '../config/site';

const financingOptions = [
  {
    title: 'Same-As-Cash',
    term: '12 Months',
    description: 'No interest if paid in full within 12 months. Perfect for planned projects.',
    features: ['No interest for 12 months', 'Low monthly payments', 'Quick approval process'],
  },
  {
    title: 'Low Monthly Payments',
    term: '60-144 Months',
    description: 'Extended terms for affordable monthly payments on larger projects.',
    features: ['Fixed interest rates', 'Predictable payments', 'No prepayment penalties'],
  },
  {
    title: 'Deferred Interest',
    term: '18 Months',
    description: 'No payments and no interest for 18 months. Ideal for insurance claim projects.',
    features: ['No payments for 18 months', 'No interest accrual', 'Flexible terms'],
  },
];

const faqs = [
  {
    question: 'How do I apply for financing?',
    answer: 'Applying is easy! After your free estimate, we can process your application in minutes. You will need basic information like your name, address, and income. Most approvals are instant.',
  },
  {
    question: 'What credit score do I need?',
    answer: 'We work with multiple lending partners to accommodate a range of credit profiles. Even if you have less-than-perfect credit, we may have options available for you.',
  },
  {
    question: 'Are there any hidden fees?',
    answer: 'No hidden fees. All terms, rates, and fees are clearly disclosed before you sign anything. We believe in complete transparency.',
  },
  {
    question: 'Can I pay off my loan early?',
    answer: 'Yes! All our financing options allow early payoff without penalties. Pay it off whenever you are ready.',
  },
];
---

<BaseLayout
  title="Financing Options"
  description="Affordable financing options for roofing and siding projects in Boise. Same-as-cash, low monthly payments, and flexible terms available."
  canonicalPath="/financing"
>
  <HeroSection
    title="Flexible Financing Options"
    subtitle="Don't let budget concerns delay protecting your home. We offer flexible financing options to fit your needs."
  />

  <section class="section">
    <div class="container">
      <div class="intro-text text-center">
        <h2>Quality Roofing & Siding Within Reach</h2>
        <p>
          We believe every Treasure Valley homeowner deserves a quality roof and beautiful siding. That's why we've
          partnered with trusted lenders to offer financing options that work with your budget. Get the work done now
          and pay over time.
        </p>
      </div>

      <div class="financing-grid">
        {
          financingOptions.map((option) => (
            <div class="financing-card">
              <div class="card-header">
                <h3>{option.title}</h3>
                <span class="card-term">{option.term}</span>
              </div>
              <p class="card-description">{option.description}</p>
              <ul class="card-features">
                {option.features.map((feature) => (
                  <li>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a href="/contact" class="btn btn-outline">
                Learn More
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section section-alt">
    <div class="container">
      <div class="process-section">
        <h2 class="text-center">How Financing Works</h2>
        <div class="process-steps">
          <div class="process-step">
            <div class="step-number">1</div>
            <h3>Get Your Estimate</h3>
            <p>Schedule a free inspection and receive a detailed project estimate.</p>
          </div>
          <div class="process-step">
            <div class="step-number">2</div>
            <h3>Apply in Minutes</h3>
            <p>Fill out a simple application. Most decisions are instant.</p>
          </div>
          <div class="process-step">
            <div class="step-number">3</div>
            <h3>Choose Your Plan</h3>
            <p>Select the financing option that best fits your budget.</p>
          </div>
          <div class="process-step">
            <div class="step-number">4</div>
            <h3>Start Your Project</h3>
            <p>We begin work while you enjoy manageable payments.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="text-center">Financing FAQs</h2>
      <div class="faq-list">
        {
          faqs.map((faq) => (
            <details class="faq-item">
              <summary>{faq.question}</summary>
              <p>{faq.answer}</p>
            </details>
          ))
        }
      </div>
    </div>
  </section>

  <CTASection
    title="Ready to Get Started?"
    subtitle="Contact us today to discuss your project and explore financing options. No obligation, no pressure."
  />
</BaseLayout>

<style>
  .intro-text {
    max-width: 700px;
    margin: 0 auto var(--spacing-xl);
  }

  .intro-text h2 {
    margin-bottom: var(--spacing-sm);
  }

  .intro-text p {
    color: var(--color-text-light);
  }

  .financing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .financing-card {
    background-color: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    transition: all var(--transition);
  }

  .financing-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
  }

  .card-header {
    margin-bottom: var(--spacing-sm);
  }

  .card-header h3 {
    margin-bottom: 4px;
  }

  .card-term {
    display: inline-block;
    background-color: var(--color-primary);
    color: var(--color-text-inverse);
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.8125rem;
    font-weight: 600;
  }

  .card-description {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
  }

  .card-features {
    list-style: none;
    margin-bottom: var(--spacing-md);
    flex: 1;
  }

  .card-features li {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-xs);
  }

  .card-features svg {
    width: 20px;
    height: 20px;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-xl);
  }

  .process-step {
    text-align: center;
  }

  .step-number {
    width: 50px;
    height: 50px;
    background-color: var(--color-primary);
    color: var(--color-text-inverse);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto var(--spacing-sm);
  }

  .process-step h3 {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-xs);
  }

  .process-step p {
    color: var(--color-text-light);
    margin: 0;
  }

  .faq-list {
    max-width: 700px;
    margin: var(--spacing-xl) auto 0;
  }

  .faq-item {
    border-bottom: 1px solid var(--color-border);
    padding: var(--spacing-md) 0;
  }

  .faq-item summary {
    font-weight: 600;
    cursor: pointer;
    list-style: none;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item p {
    margin-top: var(--spacing-sm);
    color: var(--color-text-light);
  }
</style>
