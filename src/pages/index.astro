---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import TrustBadges from '../components/TrustBadges.astro';
import ServiceCards from '../components/ServiceCards.astro';
import CityGrid from '../components/CityGrid.astro';
import HowItWorks from '../components/HowItWorks.astro';
import ReviewHighlights from '../components/ReviewHighlights.astro';
import ProjectGalleryPlaceholder from '../components/ProjectGalleryPlaceholder.astro';
import CTASection from '../components/CTASection.astro';
import FAQ from '../components/FAQ.astro';
import { siteConfig } from '../config/site';

const roofingServices = [
  {
    title: 'Roof Replacement',
    description: 'Complete roof replacement services with quality materials and expert installation. Protect your Boise home for decades.',
    href: '/roof-replacement',
  },
  {
    title: 'Roof Repair',
    description: 'Fast, reliable roof repairs for leaks, damaged shingles, and storm damage. Same-week service available.',
    href: '/roof-repair',
  },
  {
    title: 'Storm Damage Repair',
    description: 'Emergency storm damage assessment and repair. We work directly with your insurance company.',
    href: '/storm-damage-roof-repair',
  },
];

const sidingServices = [
  {
    title: 'Siding Installation',
    description: 'Transform your home with new siding. Vinyl, fiber cement, and wood options available.',
    href: '/siding-installation',
  },
  {
    title: 'Vinyl Siding',
    description: 'Low-maintenance vinyl siding in a variety of colors and styles. Durable and affordable.',
    href: '/vinyl-siding',
  },
  {
    title: 'Fiber Cement Siding',
    description: 'Premium James Hardie fiber cement siding for superior durability and curb appeal.',
    href: '/fiber-cement-siding',
  },
];

const howItWorksSteps = [
  {
    number: 1,
    title: 'Free Inspection',
    description: 'We assess your roof or siding condition and discuss your needs. No obligation, no pressure.',
  },
  {
    number: 2,
    title: 'Detailed Estimate',
    description: 'Receive a transparent, itemized estimate with material options and timeline.',
  },
  {
    number: 3,
    title: 'Quality Installation',
    description: 'Our experienced crews complete your project efficiently and professionally.',
  },
  {
    number: 4,
    title: 'Final Walkthrough',
    description: 'We inspect the work together and ensure your complete satisfaction.',
  },
];

const faqs = [
  {
    question: 'How long does a typical roof replacement take in Boise?',
    answer: 'Most residential roof replacements in the Treasure Valley take 1-3 days depending on the size and complexity of your roof. We work efficiently to minimize disruption to your home while never compromising on quality.',
  },
  {
    question: 'Do you handle insurance claims for storm damage?',
    answer: 'Yes, we have extensive experience working with insurance companies on storm damage claims. We document all damage, meet with adjusters, and help ensure you receive fair compensation for necessary repairs.',
  },
  {
    question: 'What roofing materials work best for Idaho weather?',
    answer: 'We recommend architectural asphalt shingles or metal roofing for Boise homes. Both handle our temperature swings, snow loads, and occasional hail well. During your free estimate, we will discuss which option best fits your home and budget.',
  },
  {
    question: 'Are you licensed and insured in Idaho?',
    answer: 'Absolutely. We are fully licensed (RCE-12345) and carry comprehensive liability and workers compensation insurance. We are happy to provide documentation upon request.',
  },
];

const homeSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: `${siteConfig.siteName} - Residential Roofing & Siding`,
  description: 'Trusted roofing and siding contractor serving Boise, Meridian, Eagle, and Garden City. Free estimates, quality workmanship, and excellent customer service.',
  url: siteConfig.siteUrl,
};
---

<BaseLayout
  title="Trusted Roofing & Siding Contractor"
  description="Treasure Valley Roofing & Siding provides expert roof replacement, repair, and siding services in Boise, Meridian, Eagle, and Garden City. Free estimates. Licensed & insured."
  canonicalPath="/"
  schema={homeSchema}
>
  <HeroSection
    variant="home"
    title="Protecting Boise homes, one roof at a time."
    subtitle="Treasure Valley Roofing & Siding delivers precision craftsmanship for residential projects. We handle the heavy lifting so you can focus on your home."
  />

  <TrustBadges />

  <!-- Services Section -->
  <section id="services" class="py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-16">
        <h2 class="text-3xl font-semibold tracking-tight sm:text-4xl text-slate-900">Roofing Solutions</h2>
        <p class="mt-4 text-lg text-slate-500 max-w-2xl">Comprehensive roofing services tailored for Treasure Valley homeowners demanding precision and reliability.</p>
      </div>

      <ServiceCards services={roofingServices} columns={3} />
      
      <div class="mt-12 text-center">
        <a href="/roofing" class="inline-flex items-center text-sm font-medium transition-colors text-slate-900 hover:text-yellow-600">
          View all roofing services <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="16" height="16" viewBox="0 0 24 24" class="iconify ml-1"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14m-7-7l7 7l-7 7"></path></svg>
        </a>
      </div>
    </div>
  </section>

  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-16">
        <h2 class="text-3xl font-semibold tracking-tight sm:text-4xl text-slate-900">Siding Services</h2>
        <p class="mt-4 text-lg text-slate-500 max-w-2xl">Upgrade your home's protection and curb appeal with our professional siding solutions.</p>
      </div>

      <ServiceCards services={sidingServices} columns={3} />

      <div class="mt-12 text-center">
        <a href="/siding" class="inline-flex items-center text-sm font-medium transition-colors text-slate-900 hover:text-yellow-600">
          View all siding services <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="16" height="16" viewBox="0 0 24 24" class="iconify ml-1"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14m-7-7l7 7l-7 7"></path></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-24 relative overflow-hidden bg-slate-900">
    <div class="absolute inset-0 bg-grid-pattern-dark opacity-10 pointer-events-none"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="font-medium tracking-wider uppercase text-sm mb-3 text-yellow-400">The Treasure Valley Standard</h2>
          <h3 class="text-3xl font-semibold tracking-tight sm:text-4xl text-white mb-6">Engineered for Excellence</h3>
          <p class="text-lg text-slate-400 mb-8">We understand that your home is your most valuable asset. Our workflows are designed to keep your project moving forward while ensuring the highest quality standards.</p>
          
          <ul class="space-y-4 mb-10">
            <li class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mt-1"><polyline points="20 6 9 17 4 12"></polyline></svg>
              <div>
                <h4 class="font-medium text-white text-sm">Local Expertise</h4>
                <p class="text-slate-400 text-sm">Deep understanding of Idaho's climate and building requirements.</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mt-1"><polyline points="20 6 9 17 4 12"></polyline></svg>
              <div>
                <h4 class="font-medium text-white text-sm">Transparent Pricing</h4>
                <p class="text-slate-400 text-sm">Honest, upfront estimates with no hidden costs.</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-400 mt-1"><polyline points="20 6 9 17 4 12"></polyline></svg>
              <div>
                <h4 class="font-medium text-white text-sm">Quality Materials</h4>
                <p class="text-slate-400 text-sm">Only the best products from industry-leading manufacturers.</p>
              </div>
            </li>
          </ul>

          <a href="/about" class="inline-flex items-center justify-center transition-all hover:shadow-xl hover:-translate-y-0.5 text-sm font-medium rounded-lg px-8 py-4 shadow-lg hover:bg-yellow-500 text-slate-900 bg-yellow-400">
            Learn More About Us
          </a>
        </div>

        <div class="relative rounded-2xl overflow-hidden aspect-video shadow-2xl">
          <img src="https://images.unsplash.com/photo-1635339001026-6175d102eb40?w=1200&q=80" alt="Roofing Team" class="w-full h-full object-cover" />
          <div class="absolute inset-0 bg-slate-900/20"></div>
        </div>
      </div>
    </div>
  </section>

  <HowItWorks
    steps={howItWorksSteps}
    title="Our Simple 4-Step Process"
    subtitle="From first call to final walkthrough, we make your roofing or siding project stress-free."
  />

  <CityGrid />

  <ReviewHighlights />

  <ProjectGalleryPlaceholder limit={6} />

  <FAQ faqs={faqs} title="Frequently Asked Questions" />

  <CTASection
    title="Ready to Protect Your Home?"
    subtitle="Join hundreds of satisfied Treasure Valley homeowners. Call us or fill out our online form for a free consultation."
  />
</BaseLayout>
